{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@generated": ["./src/__generated__/index.ts"],
      "@sdk/server-types": ["./src/__generated__/server-types.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
